### Terminal styles

parse_git_branch() {
  git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
export PS1="\e[0;36m\u@\h \e[m\[\e[34m\]\w \[\e[01;36m\]\$(parse_git_branch)\[\e[00m\]\n$ "

